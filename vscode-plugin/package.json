{
	"name": "synapse-vscode",
	"displayName": "synapse-vscode",
	"description": "",
	"publisher": "SajinieRanasinghe",
	"version": "0.7.0",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:xml",
		"onCommand:extension.activateExtension"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/wso2/ei-tooling-vscode.git"
	},
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"type": "object",
				"title": "XML configuration",
				"properties": {
					"xml.logs.client": {
						"type": "boolean",
						"default": true,
						"description": "Should the server log to client output"
					},
					"xml.completion.autoCloseTags": {
						"type": "boolean",
						"default": true,
						"description": "Enable/disable autoclosing of XML tags. \n\nIMPORTANT: Turn off editor.autoClosingTags for this to work",
						"scope": "window"
					},
					"xml.server.vmargs": {
						"type": [
							"string",
							"null"
						],
						"default": "-noverify -Xmx64M -XX:+UseG1GC -XX:+UseStringDeduplication",
						"description": "Specifies extra VM arguments used to launch the XML Language Server. Eg. use `-noverify -Xmx1G  -XX:+UseG1GC -XX:+UseStringDeduplication` to bypass class verification, increase the heap size to 1GB and enable String deduplication with the G1 Garbage collector",
						"scope": "window"
					},
					"xml.format.enabled": {
						"type": "boolean",
						"default": true,
						"description": "Enable/disable ability to format document",
						"scope": "window"
					},
					"xml.format.quotations": {
						"type": "string",
						"enum": [
							"doubleQuotes",
							"singleQuotes"
						],
						"default": "doubleQuotes",
						"description": "Which type of quotes to use for attribute values when formatting.",
						"scope": "window"
					}
				}
			}
		],
		"configurationDefaults": {
			"[SynapseXml]": {
				"editor.autoClosingBrackets": "never"
			}
		},
		"commands": [
			{
				"command": "extension.activateExtension",
				"title": "Activate Synapse Extension",
				"category": "Synapse",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "wso2esb.project.create",
				"title": "Create new ESB Project",
				"category": "Synapse",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "wso2esb.project.build",
				"title": "Create Deployable Archive",
				"category": "Synapse",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "extension.changeLanguage",
				"title": "Change Language to Synapse",
				"category": "Synapse",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "wso2esb.artifact.api",
				"title": "Create New API Artifact",
				"category": "Synapse",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "wso2esb.artifact.proxy",
				"title": "Create New Proxy Artifact",
				"category": "Synapse",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "wso2esb.artifact.endpoint",
				"title": "Create New Endpoint Artifact",
				"category": "Synapse",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "wso2esb.artifact.inboundEndpoint",
				"title": "Create New Inbound-Endpoint Artifact",
				"category": "Synapse",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "wso2esb.artifact.localEntry",
				"title": "Create New Local-Entry Artifact",
				"category": "Synapse",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "wso2esb.artifact.messageStore",
				"title": "Create New Message-Store Artifact",
				"category": "Synapse",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "wso2esb.artifact.messageProcessor",
				"title": "Create New Message-Processor Artifact",
				"category": "Synapse",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "wso2esb.artifact.template",
				"title": "Create New Template Artifact",
				"category": "Synapse",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "wso2esb.artifact.sequence",
				"title": "Create New Sequence Artifact",
				"category": "Synapse",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "extension.checkingRightClickFunctionality",
				"title": "Check"
			}
		],
		"languages": [
			{
				"id": "SynapseXml",
				"extensions": []
			}
		],
		"grammars": [
			{
				"language": "SynapseXml",
				"scopeName": "synapse.xml",
				"path": "./syntaxes/xml.tmLanguage.json"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "SynapseConfigProjects",
					"name": "Synapse Config Projects"
				}
			]
		},
		"menus": {
			"explorer/context": [
				{
					"command": "extension.checkingRightClickFunctionality",
					"when": "resourceLangId == xml",
					"group": "Synapse@1"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/archiver": "^2.1.3",
		"@types/fs-extra": "^4.0.8",
		"@types/mocha": "^2.2.42",
		"@types/node": "^8.10.25",
		"@types/xml2js": "^0.4.3",
		"@types/xmldom": "^0.1.29",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vsce": "^1.36.2",
		"vscode": "^1.1.33"
	},
	"dependencies": {
		"archiver": "^3.0.0",
		"chokidar": "^2.1.5",
		"dom-parser": "^0.1.5",
		"fs-extra": "^4.0.3",
		"vscode-languageclient": "^4.1.4",
		"xml2js": "^0.4.19",
		"xmldom": "^0.1.27"
	}
}
