{
	"name": "synapse-vscode",
	"displayName": "synapse-vscode",
	"description": "",
	"publisher": "Sajinie",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:xml",
		""
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "wso2esb.project.create",
				"title": "Create new ESB project",
				"category": "Synapse",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "extension.changeLanguage",
				"title": "Change Language to Synapse"
			},
			{
				"command": "wso2esb.artifact.api",
				"title": "Create new API artifact",
				"category": "Synapse",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "wso2esb.artifact.proxy",
				"title": "Create new Proxy artifact",
				"category": "Synapse",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			}
		],
		"languages": [
			{
				"id": "SynapseXml",
				"extensions": []
			}
		],
		"grammars": [
			{
				"language": "SynapseXml",
				"scopeName": "synapse.xml",
				"path": "./syntaxes/xml.tmLanguage.json"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "SynapseConfigProjects",
					"name": "Synapse Config Projects"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/fs-extra": "^4.0.8",
		"@types/xml2js": "^0.4.3",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42",
		"vsce": "^1.36.2"
	},
	"dependencies": {
		"vscode-languageclient": "^4.1.4",
		"fs-extra": "^4.0.3",
		"xml2js": "^0.4.19"
	}
}
