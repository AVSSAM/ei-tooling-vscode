<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" >

    <xs:element name="data" type="DATA">
        <xs:annotation>
            <xs:documentation source="description">
                Data defines configurations for creating data services
            </xs:documentation>
        </xs:annotation>
    </xs:element>

    <xs:complexType name="DATA" >
        <!-- TODO : need to add the constraints (might need factory refactoring) -->
        <xs:annotation>
            <xs:documentation source="description">
                This describes the possible configurations for data services
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="config" minOccurs="0" maxOccurs="unbounded">
            </xs:element>
            <xs:element name="query" minOccurs="0" maxOccurs="unbounded">
            </xs:element>
            <xs:element name="operation" minOccurs="0" maxOccurs="unbounded">
            </xs:element>
            <xs:element name="resource" minOccurs="0" maxOccurs="unbounded">
            </xs:element>
            <xs:element name="event-trigger" minOccurs="0" maxOccurs="unbounded">
            </xs:element>
        </xs:sequence>

        <xs:attribute name="baseURI" type="xs:anyURI" use="required"/>
        <xs:attribute name="name" type="xs:NMTOKEN" use="required"/>

        <xs:attribute name="enableBatchRequests" type="xs:boolean" use="optional"/>
        <xs:attribute name="enableBoxcarring" type="xs:boolean" use="optional"/>
        <xs:attribute name="txManagerJNDIName" type="xs:NMTOKEN" use="optional"/>
        <xs:attribute name="serviceNamespace" type="xs:anyURI" use="optional"/>
        <xs:attribute name="serviceGroup" type="xs:NMTOKEN" use="optional"/>
        <xs:attribute name="serviceStatus" use="optional">
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="active" />
                    <xs:enumeration value="inactive" />
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="transports" type="xs:string" use="optional"/>
    </xs:complexType>

</xs:schema>
